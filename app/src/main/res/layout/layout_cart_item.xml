<?xml version="1.0" encoding="utf-8" ?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/tint_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="Bottom">

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/tint_color"
            android:padding="12dp"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:tag="surface">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_count"
            android:layout_alignTop="@+id/layout_count"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_toLeftOf="@+id/layout_count"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout_count"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:tag="surface">

            <TextView
                android:id="@+id/text_count"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:background="@drawable/price_stroke"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/tint_color"
                android:textSize="32sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/unit"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>
