<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FilterButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:height">32dp</item>
        <item name="android:background">@drawable/filter_button_bg</item>
        <item name="android:textColor">@color/filter_button_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <!--
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        -->
    </style>

    <!-- Search bar layout -->
    <style name="SearchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SearchLayout.Edit">
        <item name="android:autoText">false</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/search_edit_selector</item>
        <item name="android:hint">@string/search_equipment</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
